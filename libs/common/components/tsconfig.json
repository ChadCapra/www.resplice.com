{
	"compilerOptions": {
    "module": "ESNext",
		"moduleResolution": "node",
		"target": "es2017",
    "declaration": true,
		"importsNotUsedAsValues": "error",
		"isolatedModules": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
    "outDir": "dist",
		"types": ["svelte"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules/*", "**/*.test.ts", "dist/*"]
}