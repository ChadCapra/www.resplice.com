{
	"name": "@resplice/components",
	"type": "module",
	"version": "0.1.0",
	"description": "Component lib for Resplice web applications",
	"author": "marcus@resplice.com",
	"license": "UNLICENSED",
	"private": true,
	"files": [
		"package"
	],
	"module": "./package/index.js",
	"types": "./package/index.d.ts",
	"exports": {
		".": {
			"types": "./package/index.d.ts",
			"default": "./package/"
		},
		"./Avatar.svelte": {
			"types": "./package/Avatar.svelte.d.ts",
			"default": "./package/Avatar.svelte"
		},
		"./forms": "./package/forms",
		"./icons": "./package/icons",
		"./skeleton": "./package/skeleton"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "svelte-kit sync && svelte-package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"peerDependencies": {
		"svelte": "^3.55.0"
	},
	"devDependencies": {
		"@sveltejs/kit": "1.0.1",
		"@sveltejs/package": "1.0.1",
		"@typescript-eslint/eslint-plugin": "^5.47.0",
		"@typescript-eslint/parser": "^5.47.0",
		"autoprefixer": "^10.4.13",
		"cssnano": "^5.1.14",
		"eslint": "^8.30.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"prettier": "^2.8.1",
		"prettier-plugin-svelte": "^2.9.0",
		"svelte-check": "^2.10.3",
		"svelte-preprocess": "^5.0.0",
		"tailwindcss": "^3.2.4",
		"tslib": "^2.4.1",
		"typescript": "^4.9.4",
		"vite": "^4.0.3",
		"vitest": "^0.26.2"
	}
}
