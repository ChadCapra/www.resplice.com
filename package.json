{
  "name": "@resplice/web",
  "version": "1.0.0",
  "description": "Monorepo for all Resplice web products",
  "author": "marcus@resplice.com",
  "license": "UNLICENSED",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChadCapra/www.resplice.com.git"
  },
  "bugs": {
    "url": "https://github.com/ChadCapra/www.resplice.com/issues"
  },
  "homepage": "https://github.com/ChadCapra/www.resplice.com#readme",
  "scripts": {
    "build-libs": "npm run build --workspace=re-components --workspace=re-utils",
    "reauth": "npm run dev --workspace=reauth",
    "resplice": "npm run dev --workspace=resplice",
    "protoc": "protoc -I=./packages/api-client/proto *.proto --js_out=import_style=commonjs,binary:./packages/api-client/binary --grpc-web_out=import_style=typescript,mode=grpcwebtext:./packages/api-client/web"
  },
  "workspaces": [
    "libs/*",
    "apps/*"
  ],
  "lint-staged": {
    "*.ts": [
      "eslint --cache",
      "prettier --check",
      "vitest related"
    ]
  }
}
